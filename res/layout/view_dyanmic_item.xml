<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="17dp"
    android:background="@android:color/white" >

    <include
        android:id="@+id/llAvater"
        layout="@layout/view_avatar" />

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="11dp"
        android:layout_toRightOf="@id/llAvater"
        android:orientation="vertical" >

        <TextView 
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_333333"
            android:text="名字显示"/>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="asdfalksdfjalskdjflajsdfkljasdlkfjasljkdfljasdf"
            android:textSize="16dp" />
        
        <com.example.view.MultiImageView
            android:id="@+id/mivImage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp" />

        <include
            android:id="@+id/rlFunction"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            layout="@layout/view_function_bar" />

        <com.example.view.CommentView
            android:id="@+id/dcvComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical" />
        
    </LinearLayout>

</RelativeLayout>